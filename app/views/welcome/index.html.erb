<h1>Welcome to my Travel Site</h1>
<p>This is my very awesome travel site.</p>

<p>My homeland is <%= @homeland %>.</p>
<p>
	<ul>
	  <% @countries.each do |country| %>
	    <li><%= country %></li>
	  <% end %>
	</ul>
</p>
<% @pictures.each do |picture| %>
<%= image_tag picture, class: "img-responsive" %>
	<% end %>

<table class="table">
  <tr>
    <% @united_states.each do |key,value| %>
	  <th><%= key.titleize %></th>
    <% end %>
  </tr>
  <tr>
    <% @united_states.each do |key,value| %>      
      <% if value.kind_of?(Array) %>
          <td><%= value.join(", ") %></td>
      <% else %>
         <td><%= value %></td>
      <% end %> 
    <% end %>
  </tr>
</table>